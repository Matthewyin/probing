# 网络诊断工具环境变量配置模板
# 复制此文件为 .env 并根据需要修改配置值

# 应用基础配置
APP_NAME="Network Diagnosis Tool"
APP_VERSION="1.0.0"
DEBUG=false

# 网络诊断配置
CONNECT_TIMEOUT=10
READ_TIMEOUT=30
MAX_REDIRECTS=5

# 系统配置
# sudo密码，用于执行mtr命令（可选，如果不提供则使用traceroute）
SUDO_PASSWORD=""

# 输出目录
OUTPUT_DIR="./output"

# 日志配置
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
